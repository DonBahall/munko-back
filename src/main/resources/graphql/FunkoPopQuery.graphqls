extend type Query {
    getAllItems(paging: SearchPaging, orderBy: OrderBy, searchCriteria: FunkoSearchCriteria): FunkoPops!
    getItem(id: Int!): FunkoPop
    getAllAttributes: AttributeCollection
}
type FunkoPops{
    items: [FunkoPop!]!
    paging: Paging!
}

type AttributeCollection {
    categories: [String]
    collections: [String]
    series: [String]
}

type FunkoPop{
    id: Int!
    name: String!
    images: [String]
    price: Int!
    amount: Int
    description: String
    sale: Boolean
    collection: String
    sublicense: String
    series: String
    category: String
    productType: String
    date: String
}

input FunkoSearchCriteria {
    name: String
    price: Price
    collection: [String]
    series: [String]
    category: [String]
    inStock: Boolean
    sale: Boolean
}